<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leidong.androidcharts">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="图表大全"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".BarActivity"
            android:label="柱状图"
            android:screenOrientation="portrait">
            </activity>

        <activity android:name=".BubbleActivity"
            android:label="气泡图"
            android:screenOrientation="portrait">
            </activity>

        <activity android:name=".HalfPieActivity"
            android:label="半饼图"
            android:screenOrientation="portrait">
            </activity>

        <activity android:name=".LineActivity"
            android:label="折线图"
            android:screenOrientation="portrait">
            </activity>

        <activity android:name=".RadarActivity"
            android:label="雷达图"
            android:screenOrientation="portrait">
            </activity>

        <activity android:name=".PieActivity"
            android:label="饼图"
            android:screenOrientation="portrait">
            </activity>

        <activity android:name=".ScatterActivity"
            android:label="散点图"
            android:screenOrientation="portrait">
            </activity>
    </application>

</manifest>